#!/bin/sh

uname_p=`uname -p`
pname=$1
pver=$2
pnamever=${pname}-${pver}
pnameprefix=$3

S=`dirname $MAKEDEB_DEBIAN`

( cd $S && find . -type f -not -path './DEBIAN/*' -exec md5sum {} \; ) > $MAKEDEB_DEBIAN/md5sums

cat <<EOD >$MAKEDEB_DEBIAN/control
Package: $pnameprefix$pname
Version: $pver
Architecture: `dpkg --print-architecture`
Maintainer: $pname
Description: $pname
EOD

fakeroot --  dpkg-deb --build $S $S/../${pnameprefix}${pnamever}.${uname_p}.deb
